<Window x:Class="GroupMigrationPnP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupMigrationPnP"
        mc:Ignorable="d"
        Title="PnP Core SDK demo" Height="450" Width="800" MinWidth="500" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblSiteCollectionURL" Content="Site Collection URL" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="118" Height="32"/>
        <TextBox x:Name="txtSiteCollectionURL" HorizontalAlignment="Left" Margin="163,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="32"/>
        
        <Button x:Name="btnSourceGroups" Content="Group Information" HorizontalAlignment="Left" Height="34" Margin="164,55,0,0" VerticalAlignment="Top" Width="114" Click="btnGetSourceGroups_Click" Grid.Column="1" Grid.Row="0"/>
        
        <TextBox x:Name="txtSourceGroups" Margin="10,65,10,10" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="1"/>
    </Grid>
</Window>
